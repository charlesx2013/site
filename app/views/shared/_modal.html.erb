<div id="modal-container">
  <div id="modal-content-container">
    <h1 id="modal-contact-headline">Contact Me!</h1>
    <div id="modal-form-container">
      <%= form_for contact_static_pages_path do %>
        <%= text_field_tag "email", nil, placeholder: "Email", type: "email", required: "required"  %>
        <%= text_field_tag "subject", nil, placeholder: "Subject", required: "required" %>
        <%= text_area_tag "message", nil, placeholder: "Message", required: "required", id:"contact-text-area" %>
        <%= submit_tag "Submit" %>
      <% end %>
    </div>
  </div>
</div>
